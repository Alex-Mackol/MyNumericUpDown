<Window x:Class="MyNumericUpDown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNumericUpDown"
        
        xmlns:MyControl="clr-namespace:MyControls;assembly=MyControls"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <MyControl:NumericUpDown Value="3"
                                 Step="2.98"
                                 Minimum="-10"
                                 Height="30"
                                 Width="150"
                                 BackColorText="Aquamarine"
                                 BackColorButtons="Bisque" />
    </Grid>
</Window>
